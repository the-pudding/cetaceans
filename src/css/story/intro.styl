.intro
	margin 0 auto 5rem auto
	position relative
	width 100%
	overflow hidden
	text-shadow 0 0 3px rgba(0,0,0,0.75)
	display flex
	flex-wrap wrap
	justify-content center
	align-items center
	
	&__content
		position relative
		padding 0 1rem
		margin-top 8rem
		+mq('bp-desktop')
			margin-top 4rem
		
	&__hed
		max-width 55rem
		margin 0 auto
		text-align center
		font-size 2.5rem
		line-height 1.1
		+mq('bp-2')
			font-size 3.5rem
		+mq('bp-3')
			font-size 4rem
		+mq('bp-4')
			font-size 5rem
	
	&__byline
		set-type-size('small', true)
		text-align center
		padding 0
	&__dek
		max-width 35rem
		margin 0 auto
		padding 0
		margin-top 4rem
		color $primary
		set-type-size('medium', true)
		+mq('bp-2')
			set-type-size('large', true)
		
	&__prose
		max-width 40rem
		margin 0 auto
		padding 0 1rem 4rem 1rem
	
	&__video
		max-width 40rem
		margin 5rem auto
		display block
		+mq('bp-desktop')
			display none
		video
			border-radius 3px
	
	&__bg 
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display none
		+mq('bp-desktop')
			display block
	&__bg video
		position absolute
		top 50%
		left 50%
		min-width 100%
		min-height 100%
		width auto
		height auto
		z-index set-index('bottom')
		transform translateX(-50%) translateY(-50%)
		opacity 0.7
				
	&__overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background url('assets/bg-pattern-dark.png')
		opacity 0.3